<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebeef0"
    tools:context=".ui.ResultFragment">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="404dp"
        android:layout_height="492dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="16dp"
        android:padding="15dp"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="139dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:text="@string/nome_estabelecimento"
                android:textColor="#495A6E"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblResultEstabelecimento"
                android:layout_width="189dp"
                android:layout_height="44dp"
                android:background="@null"
                android:textColor="@color/black" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="180dp"
                android:layout_height="44dp"
                android:background="@null"
                android:text="@string/data"
                android:textColor="#495A6E"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblResultData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textColor="@color/black" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="158dp"
                android:layout_height="201dp"
                android:text="@string/produtos"
                android:textColor="#495A6E"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblResultProdutos"
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="180dp"
                android:layout_height="44dp"
                android:text="@string/total"
                android:textColor="#495A6E"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblResultTotalConta"
                android:layout_width="180dp"
                android:layout_height="44dp"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="180dp"
                android:layout_height="44dp"
                android:text="@string/qtd_pessoas"
                android:textColor="#495A6E"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblResultQtd"
                android:layout_width="180dp"
                android:layout_height="44dp"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="180dp"
                android:layout_height="44dp"
                android:text="@string/valor_gorjeta"
                android:textColor="#495A6E"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblResultGorjeta"
                android:layout_width="100dp"
                android:layout_height="44dp"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:layout_width="369dp"
            android:layout_height="41dp"
            android:background="@null">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="180dp"
                android:layout_height="44dp"
                android:text="@string/total_pessoa"
                android:textColor="#495A6E"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblValorPessoa"
                android:layout_width="180dp"
                android:layout_height="44dp"
                android:textColor="@color/black" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="410dp"
        android:layout_height="144dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnCompatilhar"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:backgroundTint="#495A6E"
            android:text="Compartilhar"
            android:textColor="#ebeef0"
            app:cornerRadius="40dp"
            app:icon="?attr/actionModeShareDrawable"
            app:iconTint="#ebeef0" />

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:backgroundTint="#495A6E"
            android:text="Salvar"
            android:textColor="#ebeef0"
            app:cornerRadius="40dp"
            app:icon="@android:drawable/ic_menu_save"
            app:iconTint="#ebeef0" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="414dp"
        android:layout_height="94dp"
        android:background="#495A6E"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:text="@string/result_titulo"
        android:textColor="#ebeef0"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>